<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout
            Padding="20"
            BackgroundColor="Black">
        <Label Text="Usuário:" 
               TextColor="RoyalBlue"
               FontSize="40"/>
        <Entry Placeholder="Account"            
               BackgroundColor="LightGray"
               HorizontalTextAlignment="End"
               x:Name="user"/>

        <Label Text="Senha:"
               TextColor="Red"
               FontSize="40"
               />
        <Entry Placeholder="Password" 
               BackgroundColor="LightGray"
               Keyboard="Numeric"
               HorizontalTextAlignment="End"
               x:Name="password"/>

        <Button Text="Ok"
                Clicked="btnOk"></Button>
        <Button Text="Limpar"
                Clicked="btnClean"></Button>
        <Button Text="Créditos"
                Clicked="btnCredits"></Button>
    </StackLayout>

</ContentPage>